{
    "manifest_version": 3,
    "name": "Peek Demo",
    "version": "1.0",
    "description": "Test search highlight",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  